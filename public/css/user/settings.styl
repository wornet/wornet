.settings-edit
	fieldset
		padding .35em .625em .75em
		margin $smallPadding 2px
		border 1px solid $gray
		border-radius(10px)

	.settings-hint
		color $darkGray
		margin-bottom $mainPadding
		font-size 12px

	.right
		width 50%
		margin-left 50%

	.hidden
		display none
	.red
		color red
	.green
		color green

	#uniqueURLID
		width 35%
		float left

	#urlIdDisponibility
		margin $mainPadding 0 0 50%

	.checkURLID
		width 10%
		margin $mainPadding 2.5%
		background-color $blue

	.certification-link
		font-size 12px
		color $linkColor

	.proof-visu
		display none
