.settings-edit
	fieldset
		padding .35em .625em .75em
		margin $smallPadding 2px
		border 1px solid $gray
		border-radius(4px)

	.settings-hint
		color $darkGray
		margin-bottom $mainPadding
		font-size 12px

	.right
		width 50%
		margin-left 50%

	.hidden
		display none
	.red
		color red
	.green
		color green

	#uniqueURLID
		width 35%
		float left

	#urlIdDisponibility
		margin $mainPadding 0 0 50%

	.checkURLID
		width 10%
		margin $mainPadding 2.5%
		background-color $blue

	.certification-link
		font-size 12px
		color $linkColor

	.proof-visu
		display none
	span
		span
		label
			display inline-block
		span
			width 50%
		label
			width 24%


@media (max-width: 414px)
	.settings-edit
		label
			input.form-control
			select.form-control
			span
				width 100%
		.settings-hint
			width 100%
			margin 0
		.checkURLID
			width 100%
			margin $smallPadding 0
		span label
			width 20%
