.status-block .medias
	padding $smallPadding


.status-form
.status-medias-form
	.publish
		input
			float right
			margin-left -65px

.status-author
	a
		font-size 18px
	img
		float left
		margin $smallPadding
		size($thumbWidth, $thumbHeight)

.status-block
	padding $mainPadding $mainPadding 20px
	margin $mainPadding 0
	background white
	border 1px solid #ddd
	border-radius(4px)

	.settings .glyphicon-cog
		color $mediumGray

		&:hover
			color $linkColor

	.status-content
		padding $smallPadding
		clear left

	a
		color $linkColor

.status-actions
	float right
	margin -8px (- $smallPadding) (-3 * $mainPadding - $smallPadding) 0

	.btn-action-plus-w
	.btn-action-comment
		background transparent
		color $darkGray

	.btn-action-plus-w
		margin-right 5px
		background url(png("empty-w"))
		background-size 32px
		size(32px, 32px)
		&.full
			background-image url(png("full-w"))

	.like-zone
		color $darkGray

	.btn
		box-shadow none
		@media (max-width: 767px)
			height 28px
			line-height 18px

.add-media h4
	a
		color $linkColor
	span
		color $mediumGray

.upload-container
	margin $mainPadding
	position relative
	// border-radius(4px)
	border 2px solid $orange
	box-sizing border-box
	height 88px

	.progress-bar
		position absolute
		height 84px
		background lighten($lightOrange, 40%)

	.upload
		opacity(0)
		position absolute
		size(100%)

.upload-label
	color $darkGray
	font-weight bold
	font-size 17px
	text-align center
	position absolute
	top 10px
	width 100%

	small
		font-weight normal

@media (max-width: 414px)
	.status-actions
		margin-left 0
		.btn
			font-size 13px
			margin 0
	.comment-form .btn
		width 50%

	.like-zone
		font-size 10px

@media (max-width: 767px)
	.status-author
		clear right
