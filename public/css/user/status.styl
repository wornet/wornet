.status-block .medias
	padding $smallPadding


.status-form
.status-medias-form
	.publish
		input
			float right
			margin-left -65px
	.album-select
		margin $mainPadding 0

		label
			padding 0

.status-author
	a
		font-weight bold
	img
		float left
		margin $smallPadding
		size($thumbWidth, $thumbHeight)
	.icon-arrow-right
		background url(png("icon-arrow-right"))
		background-size 16px
		size(16px, 16px)
		padding 0
		margin 0
		box-shadow none
		cursor auto

.status-block
	padding $mainPadding $mainPadding 20px
	margin $mainPadding 0
	background white
	border 1px solid #ddd
	border-radius(4px)

	.date
		font-size $dateSize
	.settings .halflings-cog
		color $mediumGray

		&:hover
			color $linkColor

	.status-content
		padding $smallPadding
		clear left

	a
		color $linkColor

.status-content-edit
	margin-bottom $bigPadding * 2

.status-actions
	float right
	margin -8px (- $smallPadding) (-2 * $mainPadding - $smallPadding) 0

	.btn-action-plus-w
	.btn-action-comment
		background transparent
		color $darkGray
		cursor pointer
		.icon
			background url(png("comment"))
			margin 10px 5px 15px
			background-size 18px
			size(18px, 18px)
			padding 0


	.btn-action-plus-w
		margin-bottom 15px
		margin-right 5px
		background url(png("empty-w"))
		background-size 18px
		size(18px, 18px)
		padding 0
		&.full
			background-image url(png("full-w"))

	.like-zone
		color $darkGray
		cursor pointer

	.btn
		box-shadow none

.add-media h4
	a
		color $linkColor
	span
		color $mediumGray

.upload-container
	margin $mainPadding $mainPadding $mainPadding 0
	position relative
	// border-radius(4px)
	border 2px solid $orange
	box-sizing border-box
	height 88px
	@media (max-width: 768px)
		margin $mainPadding 0 0 0

	.progress-bar
		position absolute
		height 84px
		background lighten($lightOrange, 40%)

	.upload
		opacity(0)
		position absolute
		size(100%)

.upload-label
	color $darkGray
	font-weight bold
	font-size 17px
	text-align center
	position absolute
	top 10px
	width 100%

	small
		font-weight normal

@media (max-width: 414px)
	.status-actions
		margin-left 0

		.btn-action-comment .icon
				margin 10px 5px 10px
				background-size 15px
				size(15px, 15px)

		.btn-action-plus-w
			margin 10px 5px 10px
			background-size 15px
			size(15px, 15px)

		.like-zone
			font-size 10px

	.comment-form .btn
		width 50%

	.status-block
		rel()
		.settings
			width 20px
			abs()
			top $mainPadding
			right $mainPadding
			ul
				margin-left -150px

	.comment-block
		rel()
		.settings
			top $smallPadding
			right $smallPadding

@media (max-width: 767px)
	.status-author
		clear right
