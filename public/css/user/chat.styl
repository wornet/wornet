// Variables de configuration
@import "../includes/config"

#chat
	display none
	position fixed
	right 0
	bottom $chatHeight
	width 100%
	height 0
	z-index 3

	.chat
		float right
		width $chatWidth
		margin 5px
		// border 1px solid $gray
		border-bottom none
		box-shadow(0 0 2px $darkGray)
		border-radius(2px 2px 0 0)
		background white

		&.minimized
			margin-top $chatHeight - $chatTitleHeight

		h4
			margin 0
			padding 0 2px 0 4px
			font-size 16px
			height $chatTitleHeight
			line-height $chatTitleHeight
			vertical-align middle
			background $orange
			border-radius(2px 2px 0 0)
			color white

			a
				color white

			.close
				float right
				display block
				padding $smallPadding
				background $orange
				font-size 14px
				border-radius(2px)
				transition(background .2s)
				&:hover
					background $lightOrange

		.messages
			height $chatHeight - 24px - 38px
			overflow auto

			.date
				margin $smallPadding 0
				text-align center
				font-size 14px

			.message
				clear both

				.content
					border 1px solid #ddd
					border-radius(4px)
					margin $smallPadding
					padding $smallPadding
					position relative

					&.received
						margin-left $chatThumbWidth + $smallPadding * 2
						background $ultraLightOrange
						&:before
							content ''
							position absolute
							left -6px
							top 2px
							width 6px
							height 13px
							background url(png(orange-beak)) left top no-repeat

					&.sent
						background $nearlyWhite
						&:after
							content ''
							position absolute
							right -6px
							top 2px
							width 6px
							height 13px
							background url(png(gray-beak)) left top no-repeat

			.ok
				float right
				color $lightGray
				margin 3px $mainPadding 3px 0
				font-size 12px

			img
				float left
				width $chatThumbWidth
				height $chatThumbHeight
				margin 0 $smallPadding
				border-radius(2px)

	form
		position relative

		textarea
		input
			border-radius(0)
			margin 0
			border none
			border-top 1px solid $ultraLightGray

		textarea
			padding 6px
			width 100%
			height 50px
			resize(none)

		input
			height 30px

		::-webkit-input-placeholder
			rel(-1px, 0)
			overflow visible
		:-moz-placeholder
			rel(-1px, 0)
			overflow visible
		::-moz-placeholder
			rel(-1px, 0)
			overflow visible
		:-ms-input-placeholder
			rel(-1px, 0)
			overflow visible
		:placeholder
			rel(-1px, 0)
			overflow visible

		button
			appearance(none)
			background none
			border none
			position absolute
			right 2px
			bottom 1px


#chat.multiline
	.messages
		height $chatHeight - 24px - 58px
