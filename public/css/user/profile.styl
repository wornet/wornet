// Variables de configuration
@import "../includes/config"

$photoWidth = 200px
$photoHeight = 200px
$photoRadius = false
$progressRadialWidth = 4px

.profile-edit-btn.aside
	width 180px

.profile-edit
.settings-edit
	.alert-info
		padding $smallPadding
		.glyphicon
			top 2px
	.btn-group
		float right
	label
		display block
		position relative
		span
			display block
			float left
			width 50%
			padding-top 2px
		textarea.form-control
		select.form-control
		input.form-control
			min-width 170px
			width 50%
		&:first-of-type .form-control
			margin-top 0

.profile-edit
	label
	.alert-info
		margin-left $photoWidth + $mainPadding

.about-user
	margin $smallPadding 0 $smallPadding $photoWidth + $mainPadding
	> div
		padding 0
	i.glyphicon
		color $lightOrange
		margin-right $mainPadding
		float left
		font-size 18px

.status-author
	a
		font-size 18px
	img
		float left
		margin $smallPadding
		size($thumbWidth, $thumbHeight)

.status-block
	padding $mainPadding $mainPadding 30px
	margin $mainPadding 0
	background white
	border 1px solid #ddd
	border-radius(4px)

	.status-content
		padding $smallPadding
		clear left

.status-actions
	float right
	margin -8px (- $mainPadding) 0 0

	.btn-action-plus-w
		background-color white
		color $darkGray
		margin-right 5px

	.btn-action-comment
		background-color white
		color $darkGray

	.btn
		@media (max-width: 767px)
			height 28px
			line-height 18px

.comment-form
	padding-bottom $bigPadding
	.btn-primary
		float right

.comment-author
	img
		float left
		margin $smallPadding
		size(30px, 30px)

.comment-block .date
.comment-content
	font-size 14px

.comment-block
	background $ultraLight

.photo-options
	float left
	margin 0 $mainPadding 0 0

	.btn
		margin $smallPadding 0 0
		width 100%

#profile-photo
	size($photoWidth, $photoHeight)
	position relative

	.btn
		position absolute
		bottom 0
		margin $progressRadialWidth
		width $photoWidth - 4 * $progressRadialWidth

	.progress-radial
	.progress-radial .overlay
	img.upload-thumb
	input.upload
	.loader
		position absolute
		size(100%, 100%)

	input.upload
		cursor pointer
		opacity(0)

	.progress-radial
	.progress-radial .overlay
	img.upload-thumb
		cursor pointer
		if $photoRadius
			border-radius($photoRadius)
		transition(all .2s)

	.progress-radial
		padding $progressRadialWidth
		background-color $darkOrange
		.overlay
			position relative
			background-color white


@media (max-width: 767px)
	.about-user
		margin-left $photoWidth / 2 + $mainPadding
	#profile-photo
		size($photoWidth / 2, $photoHeight / 2)
	.profile-edit
		label
			margin-left $photoWidth / 2 + $mainPadding
			span
				float none
			span
			textarea.form-control
			select.form-control
			input.form-control
				width 100%
