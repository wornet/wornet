$photoWidth = 200px
$photoHeight = 200px
$photoRadius = false
$progressRadialWidth = 4px

.profile-edit-btn.aside
	width 180px

.profile-edit
.settings-edit
	.alert-info
		padding $smallPadding
		.glyphicon
			top 2px
	.btn-group
		float right
	label
		display block
		position relative
		span
			display block
			float left
			width 50%
			padding-top 2px
		textarea.form-control
		select.form-control
		input.form-control
			min-width 170px
			width 50%
		&:first-of-type .form-control
			margin-top 0

.profile-edit
	label
	.alert-info
		margin-left $photoWidth + 2 * $progressRadialWidth + $mainPadding

.status-author
	a
		font-size 18px
	img
		float left
		margin $smallPadding
		size(50px, 50px)

.status-block
	padding $mainPadding
	margin $mainPadding 0
	background white
	border 1px solid #ddd
	border-radius(4px)

	.status-content
		padding $smallPadding
		clear left

.photo-options
	float left
	margin 0 $mainPadding 0 0

	.btn
		margin $smallPadding 0 0
		width 100%

#profile-photo
	size($photoWidth + 2 * $progressRadialWidth, $photoHeight + 2 * $progressRadialWidth)
	position relative

	.btn
		position absolute
		bottom 0
		margin $progressRadialWidth
		width $photoWidth - 2 * $progressRadialWidth

	.progress-radial
	.progress-radial .overlay
	img.upload-thumb
	input.upload
	.loader
		position absolute
		size(100%, 100%)

	input.upload
		cursor pointer
		opacity(0)

	.progress-radial
	.progress-radial .overlay
	img.upload-thumb
		cursor pointer
		if $photoRadius
			border-radius($photoRadius)
		transition(all .2s)

	.progress-radial
		padding $progressRadialWidth
		background-color $darkOrange
		.overlay
			position relative
			background-color white

@media (max-width: 767px)
	#profile-photo
		size($photoWidth / 2 + 2 * $progressRadialWidth, $photoHeight / 2 + 2 * $progressRadialWidth)
	.profile-edit
		label
			margin-left $photoWidth / 2 + 2 * $progressRadialWidth + $mainPadding
			span
				float none
			span
			textarea.form-control
			select.form-control
			input.form-control
				width 100%
