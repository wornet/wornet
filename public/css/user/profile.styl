$photoWidth = 90px
$photoHeight = 90px

#profile-photo
	width $photoWidth
	height $photoHeight
	position relative
	margin $mainPadding auto

	img
	input.hidden
		position absolute
		width 100%
		height 100%

	input.hidden
		//visibility hidden
		border 1px soldi red
		cursor pointer

	img
		border-radius($photoWidth)
		border 3px solid #a9c7ff
		transition(all .2s)

	&:hover img
		border-width 0
		opacity(0.7)