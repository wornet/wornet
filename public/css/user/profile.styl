// Variables de configuration
@import "../includes/config"

$photoWidth = 200px
$photoHeight = 200px
$photoRadius = false
$progressRadialWidth = 4px

.profile a:not(.add-friend)
	color $linkColor

.profile-edit-btn.aside
	width 180px

.profile-edit
.settings-edit
	.alert-info
		padding $smallPadding
		.glyphicon
			top 2px
	.btn-group
		float right
		.btn
			margin-bottom 0

	.static-tooltip
		margin-left 50%

	input[type=radio]
		margin-right $mainPadding

	label
		display block
		position relative
		span
			display block
			float left
			width 50%
			padding-top 2px
		textarea.form-control
		select.form-control
		input.form-control
			min-width 170px
			width 50%
		&:first-of-type .form-control
			margin-top 0

.profile-edit
	.short
		display none
	label
	.alert-info
		margin-left $photoWidth + $mainPadding
	.missing-sex
		margin $mainPadding 0 0 0

.about-user
	margin $smallPadding 0 $smallPadding $photoWidth + $mainPadding
	> div
		padding 0
	i.glyphicon
		color $lightOrange
		margin-right $mainPadding
		float left
		font-size 18px

.photo-options
	float left
	margin 0 $mainPadding 0 0

	.btn
		margin $smallPadding 0 0
		width 100%

.profile-edit .biography
	margin-left $photoWidth + $mainPadding

#profile-photo
	size($photoWidth, $photoHeight)
	rel()

	.btn
		abs()
		bottom 0
		margin $progressRadialWidth
		width $photoWidth - 4 * $progressRadialWidth
		color $nearlyWhite
		background-color rgba(115,100,95,.5)

	.progress-radial
	.progress-radial .overlay
	img.upload-thumb
	input.upload
	.loader
		abs()
		size(100%)

	input.upload
		cursor pointer
		opacity(0)

	.progress-radial
	.progress-radial .overlay
	img.upload-thumb
		cursor pointer
		if $photoRadius
			border-radius($photoRadius)
		transition(all .2s)

	.progress-radial
		padding $progressRadialWidth
		background-color $darkOrange
		.overlay
			rel()
			background-color white

@media (max-width: 927px)
	.profile-edit label
		span
		textarea.form-control
		select.form-control
		input.form-control
			width 100%

@media (max-width: 767px)
	.about-user
	.profile-edit label
	.profile-edit .alert-info
		margin-left ($photoWidth / 2) + $mainPadding
	#profile-photo
		size($photoWidth / 2, $photoHeight / 2)
		.btn
			width calc(100% - 8px)
			i
				display none
	.photo-options .btn
		width ($photoWidth / 2)
	.profile-edit
		.long
			display none
		.short
			display inline
		label
			span
				float none
			span
			textarea.form-control
			select.form-control
			input.form-control
				width 100%
		.biography
			margin-left 0

@media (max-width: 414px)
	.profile-edit
		h5, p
			font-size 10px
		h3.important
			font-size 14px

@media (max-width: 423px)
	.about-user
	.profile-edit label
	.profile-edit .alert-info
		margin-left 0

	.photo-options
		float none
		width ($photoWidth / 2)
		margin 0 auto 10px
