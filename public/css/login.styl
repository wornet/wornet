/* <--- Feuille de style de /user/login ---> */

// Elément contenant le slogan.
#slogan
	// Paramètres relatif au texte. (Hérite de body)
	color #5f5f5f
	font-weight bold
	font-size 20px
	text-align center

	// Marges externes et type d'élément.
	margin 5px
	display block


// Citations
#quotes blockquote
	text-align center
	// Marges interne
	padding-top 18px
	padding-bottom 2px

	// Bordures
	border-left none

// Media Queries.
@media (max-width: 767px)
	img#logo
		margin auto
	#slogan
		margin-top $bigPadding * 2
	.mobile-field
		padding $fieldVPadding $fieldHPadding
		margin $mainPadding 0
		line-height $fieldLineHeight
		display block
		background rgba(255, 255, 255, 0.8)
		border-radius(4px)
	footer
		a.link
		copytag
			padding $smallPadding
			margin $smallPadding 0 0

@media (max-width: 991px)
	img#logo
		margin $bigPadding auto