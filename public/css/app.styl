/* <--- Feuille de style générale ---> */

// Variables de configuration
@import "includes/config"

// Fonctions stylus
@import "includes/mixins"

*
	box-sizing(border-box)


// Clear both
.cb
	clear both

html
body
	// Tailles, marges interne et externe.
	size(100%, 100%)
	margin 0
	padding 0

body
	// Police de charactères.
	font 14px/1.4 $fonts
	padding-bottom $footerHeight
	// Bloquage de la séléction sur tous les navigateurs.
	-webkit-touch-callout none
	user-select(none)

	&.openingTemplate
		#wrap
			padding-top 35px
		// Paramètres du fond de la page.
		background url(jpg(background-image-small)) no-repeat center fixed
		background-size(cover) 


.well
	padding $mainPadding
	background $ultraLight

h3
	margin 0 0 $mainPadding
	color $orange
	text-shadow 0 1px 1px white
	font-size 18px

.fit
	padding 0

#logo-content
.main-padding
	padding $mainPadding

iframe
	display block
	size(100%, 0px)
	border none

// .loader sera utilisé si je parviens à faire un système de
// navigation AJAX compatible Angular
.loader
	fix(0px, 0px)
	size(100%, 100%)
	overflow hidden
	background url(gif(loader)) center center no-repeat
	&.preload
		height 0


#wrap
	min-height 100%
	height auto !important
	height 100%
	margin 0 auto -$footerHeight
	padding $headerHeight 0 $footerHeight

footer
	// Tailles du pied de page.
	size(100%, $footerHeight)

	// Paramètres relatif au texte. (Hérite de body)
	text-align center

	// Fond du pied de page.
	background-color $footerBackground

	a.link
	.copytag
		// Marges interne et externe des liens du pied de page (footer)
		display block
		margin-top $bigPadding
		padding $mainPadding
		color $linkColor

	a.link
		// Marges interne et externe des liens du pied de page (footer)
		display block
		padding $mainPadding

		// Type de container
		display inline-block

		// Paramètres relatif au texte.
		font-weight $linkWeight

		// Liens du pied de page au passage de la souris.
		&:hover
			text-decoration underline



.navbar
	font-size 17px
	color white

#navbar
	background $orange

.navbar a
	color inherit
	text-decoration none
	display inline
	transition .2s all
	&:hover
		color $orange


#underbar
	background $lightGray
	color $black
	ul.navbar-right
		margin-right 0
	.navbar-form label
		display block

.pill
	display inline-block
	background $black
	color $lightGray
	padding 0 9px 0 8px
	border-radius(100%)

#search
	margin 2px 0 -1px
	height 32px !important
	height 22px

.ref-color
	color $orange


blockquote
	font-size 14px

.btn
.form-control
	// Marges internes et externes.
	padding $fieldVPadding $fieldHPadding
	margin $mainPadding 0
	line-height $fieldLineHeight * 0.7
	transition(all .2s)

.form-control
.btn
	height $fieldLineHeight + 2 * $fieldVPadding + 2 !important
	height $fieldLineHeight
.btn
	height $fieldLineHeight + 2 * $fieldVPadding + 2

// Champs de texte.
.form-control
	// Bordures.
	border 1px solid rgba(156, 156, 156, 0.35)

	// Réduction de padding due au border
	padding $fieldVPadding - 1 $fieldHPadding - 1

	// Fond, police de charactères et ombres.
	font-family $fonts

::-webkit-input-placeholder
	line-height $fieldLineHeight

:-moz-placeholder
	line-height $fieldLineHeight

::-moz-placeholder
	line-height $fieldLineHeight

:-ms-input-placeholder
	line-height $fieldLineHeight

// Barre de sélection.
select.form-control
	padding-left 0px

// Champs de texte au focus.
.btn:focus
.form-control:focus
	// Correcteur d'orthographe et ombres.
	outline(none)
	border-color #D7752E
	box-shadow(0px 0px 3px 1px #F7852E)

.btn
	height 28px !important
	height 18px
	line-height 18px

	// Bordures.
	border none

	// Paramètres relatif au texte.
	font-weight bold
	color #000

	// Fond
	background-linear-gradient(top, #ffda00, 10%, #ff7500, 90%)

	&.btn-plain
		width 100%

// Image logo.
img#logo
	width 350px

.std-line
	display inline-block
	line-height 14px
	vertical-align bottom

label
	font-weight normal
	color $linkcolor
	input[type="checkbox"]
		position relative
		top 2px
		margin-right $smallPadding

// Formulaire de connexion.	
form#login
	padding 30px 0
	.narrow
		padding 0 $smallPadding

// Lien d'oublie du mot de passe.
a#forget-it
	color $orange
	// Lien d'oublie du mot de passe au passage de la souris.
	&:hover
		text-decoration none

h2
	// Paramètres relatif au texte. (Hérite de body)
	color #5f5f5f
	font-weight bold
	font-size 20px
	text-align center

	// Marges externes et type d'élément.
	margin $smallPadding
	display block

#createAccountTitle
	padding-top $mainPadding
	padding-bottom 2 * $bigPadding

.player
	margin auto
	height auto

ul.photos-thumbs
	list-style none
	padding 0
	li
		display block

.thumb
	display block
	float left
	margin $smallPadding
	width $thumbWidth
	height $thumbHeight

.date
	color $black

.friend-ask
	.if-accepted
		display none
	.shift
		margin-left $thumbWidth + $bigPadding
		.username
			font-weight bold
		.btn
			margin $smallPadding 0 0

// Imports.
@import "includes/tooltip"
@import "user/login"
@import "user/profile"
@import "agenda"


// Media Queries.
@media (max-width: 767px)
	.navbar h1
	.desktop
		display none
	#createAccountTitle
		padding-bottom $bigPadding
	img#logo
		margin auto
	#slogan
		padding-top $bigPadding * 1.5
		padding-bottom $smallPadding
	.mobile-field
		padding $fieldVPadding $fieldHPadding
		margin $mainPadding 0
		line-height $fieldLineHeight + $mobileIncrease*0.5
		display block
		background rgba(255, 255, 255, 0.8)
		border-radius(4px)
	.form-control
	.btn
		line-height $fieldLineHeight + $mobileIncrease*0.5
		height $fieldLineHeight + 2 * $fieldVPadding + $mobileIncrease + 2 !important
		height $fieldLineHeight + $mobileIncrease
	.btn
		height $fieldLineHeight + 2 * $fieldVPadding + $mobileIncrease + 2
	.icon-bar
		background white
	#underbar .navbar-form
		margin 0
		padding $smallPadding $mainPadding
		.glyphicon
			margin 0 6px -999px
			top -23px
			float right
	footer
		a.link
		.copytag
			padding $smallPadding
			margin $smallPadding 0 0

@media (min-width: 768px)
	.pad-right
		padding-right $mainPadding
	.pad-left
		padding-left $mainPadding
	.navbar-header
	.mobile
	.nav>li.mobile
		display none
	.navbar h1
		margin 4px 0 (- $headerHeight) 0
		padding-left 30px
		text-align center
	#navbar .container-fluid
		padding-left 0
	#underbar .navbar-form
		margin-bottom 0
		width 33.33333333%
		label
		.form-control
			width 100%
		.glyphicon
			margin-left -28px
			top 5px

@media (max-width: 991px)
	img#logo
		margin $bigPadding auto