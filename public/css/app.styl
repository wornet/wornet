/* <--- Feuille de style générale ---> */

// Variables de configuration
@import "includes/config"

// Fonctions stylus
@import "includes/mixins"

*
	box-sizing(border-box)


// Clear both
.cb
	clear both

html
body
	// Tailles, marges interne et externe.
	size(100%, 100%)
	margin 0
	padding 0

body
	// Police de charactères.
	font 14px/1.4 $fonts
	padding-bottom $footerHeight
	// Bloquage de la séléction sur tous les navigateurs.
	// -webkit-touch-callout none
	// user-select(none)

	&.openingTemplate
		#wrap
			padding-top 35px
		// Paramètres du fond de la page.
		background url(bigJpg(background-image-small)) no-repeat center fixed
		background-size(cover)
		filter unquote("progid:DXImageTransform.Microsoft.AlphaImageLoader(src='" + bigJpg(background-image-small) + "', sizingMethod='scale')")
		// -ms-filter quote("progid:DXImageTransform.Microsoft.AlphaImageLoader(src='" + bigJpg(background-image-small) + "', sizingMethod='scale')")


.well
	padding $mainPadding
	background $ultraLight

h3
	margin 0 0 $mainPadding
	color $orange
	text-shadow 0 1px 1px white
	font-size 18px

#logo-content
.main-padding
	padding $mainPadding

iframe
	display block
	size(100%, 0px)
	border none

.loader
.loading
	background-image url(gif(loader))
	background-position center center
	background-repeat no-repeat

.loader
	fix(0px, 0px)
	size(100%, 100%)
	opacity(1)
	overflow hidden
	background-color rgba(0, 0, 0, .2)
	transition(opacity .4s)
	&.preload
		opacity(0)
		height 0

.loading *
	visibility hidden


#wrap
	min-height 100%
	height auto !important
	height 100%
	margin 0 auto -$footerHeight
	padding $headerHeight 0 $footerHeight

footer
	// Tailles du pied de page.
	size(100%, $footerHeight)

	// Paramètres relatif au texte. (Hérite de body)
	text-align center

	// Fond du pied de page.
	background-color $footerBackground

	a.link
	.copytag
		// Marges interne et externe des liens du pied de page (footer)
		display block
		margin-top $bigPadding
		padding $mainPadding
		color $linkColor

	a.link
		// Marges interne et externe des liens du pied de page (footer)
		display block
		padding $mainPadding

		// Type de container
		display inline-block

		// Paramètres relatif au texte.
		font-weight $linkWeight

		// Liens du pied de page au passage de la souris.
		&:hover
			text-decoration underline


.notifications .thumb
	size($notificationThumbWidth, $notificationThumbHeight)
	margin 0 5px 0 -5px

a
.btn
	cursor pointer


.navbar
	font-size 17px
	color white

#navbar
	background $orange

.navbar a
	color inherit
	text-decoration none
	display inline
	transition(all .2s)
	&:hover
		color $orange


#underbar
	background $lightGray
	color $black
	ul.navbar-right
		margin-right 0
	.navbar-form label
		display block

.pill
	display inline-block
	background $black
	color $lightGray
	padding 0 9px 0 8px
	border-radius(100%)

#search
	margin 2px 0 -1px
	height 32px

.ref-color
	color $orange

.errors
	margin 0 $mainPadding

.inline-button
	margin 0 $smallPadding
	padding 0 $mainPadding
	position relative
	img
	span
		position absolute
		left 2px
		top 0


blockquote
	font-size 14px


span.form-control
div.form-control
a.form-control
button.form-control
input.form-control
.btn
	// Marges internes et externes.
	padding $fieldVPadding $fieldHPadding
	margin $mainPadding 0
	line-height $fieldLineHeight * 0.7
	transition(all .2s)

	height $fieldLineHeight + 2 * $fieldVPadding + 2

.btn.bar
	display block
	margin 0 $mainPadding

// Champs de texte.
.form-control
	// Bordures.
	border 1px solid rgba(156, 156, 156, 0.35)

	// Réduction de padding due au border
	padding $fieldVPadding - 1 $fieldHPadding - 1

	// Fond, police de charactères et ombres.
	font-family $fonts

::-webkit-input-placeholder
	line-height $fieldLineHeight

:-moz-placeholder
	line-height $fieldLineHeight

::-moz-placeholder
	line-height $fieldLineHeight

:-ms-input-placeholder
	line-height $fieldLineHeight

// Barre de sélection.
select.form-control
	padding-left 0px

// Champs de texte au focus.
.btn:focus
.form-control:focus
	// Correcteur d'orthographe et ombres.
	outline(none)
	border-color #D7752E
	box-shadow(0px 0px 3px 1px #F7852E)

.btn
	line-height 18px

	// Bordures.
	border none

	// Paramètres relatif au texte.
	font-weight bold
	color #000

	// Fond
	background-linear-gradient(top, #ffda00, 10%, #ff7500, 90%)

	&.btn-plain
		width 100%

// Image logo.
img#logo
	width 350px

.std-line
	display inline-block
	line-height 14px
	vertical-align bottom

label
	font-weight normal
	color $linkcolor
	input[type="checkbox"]
		position relative
		top 2px
		margin-right $smallPadding

// Formulaire de connexion.	
form#login
	padding 30px 0
	.narrow
		padding 0 $smallPadding

// Lien d'oublie du mot de passe.
a#forget-it
	color $orange
	// Lien d'oublie du mot de passe au passage de la souris.
	&:hover
		text-decoration none

h2
	// Paramètres relatif au texte. (Hérite de body)
	color #5f5f5f
	font-weight bold
	font-size 20px
	text-align center

	// Marges externes et type d'élément.
	margin $smallPadding
	display block


.big-line
	line-height 28px


.album
	background $ultraLightOrange
	border-radius(4px)
	padding $smallPadding
	transition(.2s all)
	margin-bottom $mainPadding
	cursor pointer

	&:hover
		background $lightOrange

	h4
		font-weight bold
		font-size 15px
		margin 0
	
	.description
		margin 2px 0 0

.upload-container
	margin-top $mainPadding
	position relative
	border-radius(4px)
	border 2px solid $orange
	box-sizing border-box
	height 68px
	
	.progress-bar
		position absolute
		height 64px
		background lighten($lightOrange, 40%)
	
	.upload
		opacity(0)
		position absolute
		size(100%, 100%)

.upload-label
	color $darkGray
	font-weight bold
	font-size 17px
	text-align center
	position absolute
	top 10px
	width 100%
	
	small
		font-weight normal

.description
	font-size 11px

#createAccountTitle
	padding-top $mainPadding
	padding-bottom 2 * $bigPadding

.player
	margin auto
	height auto

ul.photos-thumbs
	list-style none
	padding 0
	li
		display block

.thumb
	display block
	float left
	margin $smallPadding
	width $thumbWidth
	height $thumbHeight

.date
	color $black

.friend-ask
	.if-accepted
		display none
	.shift
		margin-left $thumbWidth + $bigPadding
		.username
			font-weight bold
		.btn
			margin $smallPadding 0 0


.headband
	padding $smallPadding 0

.fit
	padding 0

.glued
.btn.glued
input.glued
	margin 0

fieldset.tab .btn
	margin-bottom 0

.medias
	h3
		clear left
		margin 0
		padding-top $mainPadding

	iframe
	img
		size(90px, 90px)
		float left

	iframe.preview
		size(480px, 270px)
		float none
	
	a
		display block

#status-view img.big
	max-width 100%
	max-height 100%

.cookiesWarning .navbar-right
	text-align right

.aside
	text-align right
	float right
	width 200px

.word-wrap
	overflow-wrap break-word
	white-space -moz-pre-wrap
	white-space -pre-wrap
	white-space -o-pre-wrap
	white-space pre-wrap
	word-wrap break-word
	word-break break-all

.tab
	padding $mainPadding
	margin-bottom $mainPadding
	background white
	border 1px solid #ddd
	border-top-color transparent
	border-radius(0 0 4px 4px)

// Imports.
@import "includes/tooltip"
@import "user/login"
@import "user/profile"
@import "user/chat"
@import "agenda"


// Media Queries.
@media (max-width: 767px)
	.navbar h1
	.desktop
		display none
	#createAccountTitle
		padding-bottom $bigPadding
	img#logo
		margin auto
	#slogan
		padding-top $bigPadding * 1.5
		padding-bottom $smallPadding
	.mobile-field
		padding $fieldVPadding $fieldHPadding
		margin $mainPadding 0
		line-height $fieldLineHeight + $mobileIncrease*0.5
		display block
		background rgba(255, 255, 255, 0.8)
		border-radius(4px)
	span.form-control
	div.form-control
	a.form-control
	button.form-control
	input.form-control
	.btn
		line-height $fieldLineHeight + $mobileIncrease*0.5
		height $fieldLineHeight + 2 * $fieldVPadding + $mobileIncrease + 2
	.icon-bar
		background white
	#underbar .navbar-form
		margin 0
		padding $smallPadding $mainPadding
		.glyphicon
			margin 0 6px -999px
			top -23px
			float right
	footer
		.row
			margin 0
			padding-top 3px
		a.link
		.copytag
			padding $smallPadding
			margin $smallPadding 0 0

@media (min-width: 768px)
	.pad-right
		padding-right $mainPadding
	.pad-left
		padding-left $mainPadding
	.navbar-header
	.mobile
	.nav>li.mobile
		display none
	.navbar h1
		margin 4px 0 (- $headerHeight) 0
		padding-left 30px
		text-align center
	#navbar .container-fluid
		padding-left 0
	#underbar .navbar-form
		margin-bottom 0
		width 33.33333333%
		label
		.form-control
			width 100%
		.glyphicon
			margin-left -28px
			top 5px

@media (max-width: 991px)
	img#logo
		margin $bigPadding auto