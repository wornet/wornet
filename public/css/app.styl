/* <--- Feuille de style générale ---> */

// Variables de configuration
@import "includes/config"

// Fonctions stylus
@import "includes/mixins"

*
	box-sizing(border-box)


// Clear both
.cb
	clear both

html
body
	// Tailles, marges interne et externe.
	size(100%, 100%)
	margin 0
	padding 0

body
	padding-top 35px
	// Bloquage de la séléction sur tous les navigateurs.
	-webkit-touch-callout none
	user-select(none)

	// Paramètres du fond de la page.
	background url(jpg(background-image-small)) no-repeat center fixed
	background-size(cover) 

body
	// Police de charactères.
	font 14px/1.4 $fonts
	padding-bottom $footerHeight

.fit
	padding 0

#logo-content
	padding $mainPadding

iframe
	size(100%, 0px)
	border none

// .loader sera utilisé si je parviens à faire un système de
// navigation AJAX compatible Angular
.loader
	fix(0px, 0px)
	size(100%, 100%)
	overflow hidden
	background url(gif(loader)) center center no-repeat
	&.preload
		height 0


#wrap
	min-height 100%
	height auto !important
	height 100%
	margin 0 auto -$footerHeight
	padding 0 0 $footerHeight

body>footer
	// Tailles du pied de page.
	size(100%, $footerHeight)

	// Paramètres relatif au texte. (Hérite de body)
	text-align center

	// Fond du pied de page.
	background-color $footerBackground

	a.link
	.copytag
		// Marges interne et externe des liens du pied de page (footer)
		display block
		margin-top $bigPadding
		padding $mainPadding
		color $linkColor

	a.link
		// Marges interne et externe des liens du pied de page (footer)
		display block
		padding $mainPadding

		// Type de container
		display inline-block

		// Paramètres relatif au texte.
		font-weight $linkWeight

		// Liens du pied de page au passage de la souris.
		&:hover
			text-decoration underline



.navbar
	color white
	size(100%, 50px)
	background-color $orange

.navbar a
	color inherit
	padding 20px
	text-decoration none
	display inline
	&:hover
		color $orange

.navbar h1
	margin 4px
	text-align center


.ref-color
	color $orange


blockquote
	font-size 14px

.btn
.form-control
	// Marges internes et externes.
	padding $fieldVPadding $fieldHPadding
	margin $mainPadding 0
	line-height $fieldLineHeight * 0.7
	transition(all .2s)

input.form-control
input.btn
	height $fieldLineHeight + 2 * $fieldVPadding + 2 !important
	height $fieldLineHeight

// Champs de texte.
.form-control
	// Bordures.
	border 1px solid rgba(156, 156, 156, 0.35)

	// Réduction de padding due au border
	padding $fieldVPadding - 1 $fieldHPadding - 1

	// Fond, police de charactères et ombres.
	font-family $fonts

::-webkit-input-placeholder
	line-height $fieldLineHeight

:-moz-placeholder
	line-height $fieldLineHeight

::-moz-placeholder
	line-height $fieldLineHeight

:-ms-input-placeholder
	line-height $fieldLineHeight

// Barre de sélection.
select.form-control
	padding-left 0px

// Champs de texte au focus.
.btn:focus
.form-control:focus
	// Correcteur d'orthographe et ombres.
	outline(none)
	border-color #D7752E
	box-shadow(0px 0px 3px 1px #F7852E)

.btn
	height 28px !important
	height 18px
	line-height 18px

	// Bordures.
	border none

	// Paramètres relatif au texte.
	font-weight bold
	color #000

	// Fond
	background-linear-gradient(top, #ffda00, 10%, #ff7500, 90%)

	&.btn-plain
		width 100%

// Image logo.
img#logo
	width 350px

label
	font-weight normal
	vertical-align top
	line-height $fieldLineHeight
	color $linkcolor
	input[type="checkbox"]
		margin-top 3px
		margin-right $smallPadding

// Formulaire de connexion.	
form#login
	padding 30px 0
	.narrow
		padding 0 $smallPadding

// Lien d'oublie du mot de passe.
a#forget-it
	color $orange
	// Lien d'oublie du mot de passe au passage de la souris.
	&:hover
		text-decoration none

h2
	// Paramètres relatif au texte. (Hérite de body)
	color #5f5f5f
	font-weight bold
	font-size 20px
	text-align center
	padding-bottom 40px

	// Marges externes et type d'élément.
	margin 5px
	display block

.player
	margin auto
	height auto

// Imports.
@import "includes/tooltip"
@import "user/login"
@import "user/profile"
@import "agenda"