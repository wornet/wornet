/* <--- Feuille de style générale ---> */

// Variables de configuration
@import "includes/config"

// Fonctions stylus
@import "includes/mixins"

*
	-moz-box-sizing border-box
	-webkit-box-sizing border-box
	box-sizing border-box

// Raccourci

// KO : Utilisé où ?
// Bloc de type inline-block.
.inline-block
	display inline-block

// KO : Utilisé où ?
// Lien en gras.
.boldlink
	font-weight bold

// Clear both
.cb
	clear both

html
body 
	// Tailles, marges interne et externe.
	height 100%
	width 100%
	margin 0
	padding 0

body
	padding-top 35px
	// Bloquage de la séléction sur tous les navigateurs.
	-webkit-touch-callout none /* pour Chrome et Safari */
	-webkit-user-select none /* pour Chrome et Safari */
	-khtml-user-select none 
	-moz-user-select none /* pour Mozilla Firefox */
	-ms-user-select none
	-o-user-select none /* pour Opera */
	user-select none /* version standarisée */

	// Paramètres du fond de la page.
	background url(/img/background-image-small.jpg) no-repeat center fixed
	-webkit-background-size cover /* pour Chrome et Safari */
	-moz-background-size cover /* pour Firefox */
	-o-background-size cover /* pour Opera */
	background-size cover /* version standardisée */

header
	height $headerHeight

body
	// Police de charactères.
	font 14px/1.4 $fonts
	padding-bottom $footerHeight

#logo-content
	padding 10px

.loader
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	overflow hidden
	background url(/img/loader.gif) center center no-repeat
	.hidden
		height 0

.tooltip-focus.left
	width $tooltipWidth
	margin-left - $tooltipWidth - $mainPadding
	.tooltip-inner
		text-align left
		width $tooltipWidth
		max-width $tooltipWidth - 5

.tooltip.left.tooltip-focus .tooltip-arrow
	top 15px
	margin-right -5px

#wrap
	min-height 100%
	height auto !important
	height 100%
	margin 0 auto -$footerHeight
	padding 0 0 $footerHeight

body>footer
	// Tailles du pied de page.
	width 100%
	height $footerHeight

	// Paramètres relatif au texte. (Hérite de body)
	text-align center

	// Fond du pied de page.
	background-color $footerBackground

	a.link
	.copytag
		// Marges interne et externe des liens du pied de page (footer)
		display block
		margin-top $bigPadding
		padding $mainPadding
		color $linkColor

	a.link
		// Marges interne et externe des liens du pied de page (footer)
		display block
		padding $mainPadding

		// Type de container
		display inline-block

		// Paramètres relatif au texte.
		font-weight $linkWeight

		// Liens du pied de page au passage de la souris.
		&:hover
			text-decoration underline

.navbar
	color #000
	width 100%
	background-color #ffffff
	border-bottom 1px solid #eee
	box-shadow(0px 0px 4px 2px #DADADA)
	height 50px


// Infobulles (tooltip)
.tooltip.fade.left.in
	position relative
	width 0

.navbar #navbar-logo-content
	display inline-block
	background url(/img/logo.png) no-repeat center

	margin auto
	height 50px


#navbar-right-menu
	display inline-block

	height 50px
	padding 12px

#navbar-left-menu
	display inline-block

	height 50px
	padding 12px

.navbar a
	color #C0C0C0
	padding 20px
	text-decoration none
	display inline
	&:hover
		color #FCA000



.tooltip-inner
	padding 0
	background white
	border 1px solid gray
	border-radius(5px)
	border-right 1px solid gray

	p
		padding 4px 8px
		color #000

	h4
		padding 3px 2px 1px 24px
		margin 0 0 2px
		color #000
		fonts $fonts 18px bold
		background #eee url(/img/i.png) no-repeat 3px center
		background-size 20px 20px
		border-bottom 1px solid gray
		border-radius(5px 5px 1px 1px)

// Class pour la sécurité du mot de passe
.pass-security
	display inline-block
	color #141414
	border-radius 2px
	border 1px solid #141414
	padding 3px
	font-weight bold

	&.verylow
		color #ff0000
		border 1px solid #ff0000
		div::after
			content "Faible"

	&.low
		color #ff7d00
		border 1px solid #ff7d00
		div::after
			content "Assé Faible"

	&.medium
		color #ffe600
		border 1px solid #ffe600
		div::after
			content "Moyen"

	&.high
		color #abe600
		border 1px solid #abe600
		div::after
			content "Fort"

	&.veryhigh
		color #00b400
		border 1px solid #00b400
		div::after
			content "Trés Fort"

	div
		text-align center
		color #333
		border-radius 2px
		height 15px

			

// Champs de type date.
// KO Attention, le style va être appliqué à tous les champs de type date
// KO Il n'y a aucun champ de type date dans les templates
// KO D'une manière générale sur les champs, il va falloir leur trouver un style commun et partir du .form-control de bootstrap
input[type=date]
	// Marges internes et externes.
	padding 4px
	margin 5px 10px

	// Bordures.
	border 1px solid #eee
	// KO il faut utiliser la fonction pour une plus grande compatibilité
	border-radius 5px

	// Fond et police de charactères.
	background #fff
	font-family $fonts

blockquote
	font-size 14px
.btn
.form-control
	// Marges internes et externes.
	padding $fieldVPadding $fieldHPadding
	margin $mainPadding 0
	line-height $fieldLineHeight * 0.7
	transition(all .2s)

input.form-control
input.btn
	height $fieldLineHeight + 2 * $fieldVPadding + 2 !important
	height $fieldLineHeight

// Champs de texte.
.form-control
	// Bordures.
	border 1px solid rgba(156, 156, 156, 0.35)

	// Réduction de padding due au border
	padding $fieldVPadding - 1 $fieldHPadding - 1

	// Fond, police de charactères et ombres.
	font-family $fonts

::-webkit-input-placeholder
	line-height $fieldLineHeight

:-moz-placeholder
	line-height $fieldLineHeight

::-moz-placeholder
	line-height $fieldLineHeight

:-ms-input-placeholder
	line-height $fieldLineHeight

// Barre de sélection.
select.form-control
	padding-left 0px

// Champs de texte au focus.
.btn:focus
.form-control:focus
	// Correcteur d'orthographe et ombres.
	-moz-outline none
	-webkit-outline none
	outline none
	border-color #D7752E
	box-shadow(0px 0px 3px 1px #F7852E)

.btn
	// Bordures.
	border none

	// Paramètres relatif au texte.
	font-weight bold
	color #000

	// Fond
	background-linear-gradient(top, #ffda00, 10%, #ff7500, 90%)

	&.btn-plain
		width 100%

// Image logo.
img#logo
	width 350px

label
	font-weight normal
	vertical-align top
	line-height $fieldLineHeight
	color $linkcolor
	input[type="checkbox"]
		margin-top 3px
		margin-right $smallPadding

// Formulaire de connexion.	
form#login
	padding 30px 0
	.narrow
		padding 0 $smallPadding

// Lien d'oublie du mot de passe.
a#forget-it
	color $orange
	// Lien d'oublie du mot de passe au passage de la souris.
	&:hover
		text-decoration none


// Imports.
@import "login"
@import "agenda"