#profile-photo-media
	size(50px, 100%)
	rel()

	.btn
		abs()
		bottom 0
		margin $progressRadialWidth
		width 50px - 4 * $progressRadialWidth
		color $nearlyWhite
		background-color rgba(115,100,95,.5)

	.progress-radial
	.progress-radial .overlay
	img.upload-thumb
	input.upload
	.loader
		abs()
		size(100%)

	input.upload
		cursor pointer
		opacity(0)

	.progress-radial
	.progress-radial .overlay
	img.upload-thumb
		cursor pointer
		if $photoRadius
			border-radius($photoRadius)
		transition(all .2s)

	.progress-radial
		padding $progressRadialWidth
		background-color $darkOrange
		.overlay
			rel()
			background-color white
