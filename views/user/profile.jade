extends ../layouts/user

block body
	.col-sm-4.col-xs-12.pad-right
		//- Friends
		if isMe
			include ../includes/friends
			include ../includes/asks-for-friend
		if isAFriend || isMe
			//- Photos/Videos
			include ../includes/medias
		else
			//- Users
			include ../includes/users.jade
	.col-sm-8.col-xs-12.pad-left
		+alert(profileAlerts)
		//- Profile
		include ../includes/profile
		if isAFriend || isMe
			//- Publications
			include ../includes/status

	+data('at', profile.hashedId)
	+data('sharedAlbumId', profile.sharedAlbumId)
