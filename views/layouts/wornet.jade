include ../includes/mixins
doctype html
html.no-js(lang=lang())
	head
		meta(charset="UTF-8")
		title
			block title
				=s("Wornet")
		base(href="/")
		block meta
			meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
			+meta("viewport", "width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no, target-densitydpi=device-dpi")
			+meta("apple-mobile-web-app-capable", "yes")
			+meta("format-detection", "telephone=no")
			+meta("description", "Wornet est un réseau social totalement repensé pour vous – et vos amis. Il intègre une plateforme de partage de contenu (Daily Capture) ainsi que …")
			+meta("keywords", "réseau social, réseau, social, wornet, français, étudiants, Limoges, France, plateforme, vidéos, médias, amis, contacts, espace, personnel, professionnel, portefeuille, clients, e-réputation, entreprises, sociétés, célébrités")
			//- KO
				J'aimerais qu'on vérifie la pertinence de ces balises qui a priori ne sont lues
				ni par les robots ni par les utilisateurs :
				+meta("generator", "Wornet v1")
				+meta("author", "Manuel Costes")
				+meta("copyright", "© 2014 Wornet")

				J'ai supprimé la balise de langue (car elle fait doublon avec la ligne 3 et de
				plus, Wornet sera peut-être trauits en plusieurs langues)
			+meta("_csrf", _csrf)
		block css
			each style in options.css().main
				if typeof(style) === 'object'
					if style[0] === 'non-ie'
						+non-ie()
							link(media="all" rel="stylesheet" href=style[1])
					else
						+ie(style[0])
							link(media="all" rel="stylesheet" href=style[1])
				else
					link(media="all" rel="stylesheet" href=style)
		block link
			link(rel="shortcut icon" href="/favicon.ico")
		block id
			+ie('if lte IE 8')
				script
					:coffee
						((f) ->
							f 'tabs'
							f 'pane'
							f 'ng-pluralize'
						)(document.createElement)
		block head

	body(ng-app="Wornet")

		#wrap
			block nav
				nav#navbar.navbar.navbar-fixed-top
					img(src="img/logo.png") 
					//- Chercher sur app.styl: .navbar img
			+ie('if lte IE 7')
				.alert.alert-danger
					- var upgradeUrl = "http://browsehappy.com/"
					- var ieFrameUrl = "http://www.google.com/chromeframe/?redirect=true"
					- var upgradeLink = jd('a(href="' + upgradeUrl + '")\n\t="' + s("Upgrade to a different browser") + '"')
					- var ieFrameLink = jd('a(href="' + ieFrameUrl + '")\n\t="' + s("install Google Chrome Frame") + '"')
					!=s("Your browser is too old! {upgradeYourBrowser} or {installIeFrame} to experience this site.", { upgradeYourBrowser: upgradeLink, installIeFrame: ieFrameLink })

			div(role="main")
				block body

		footer
			block footer
				.row.col-sm-8.col-sm-offset-2
					a.link.col-sm-3.col-xs-6(href="/news")
						=s("Newsroom")
					a.link.col-sm-3.col-xs-6(href="/jobs")
						=s("Offres d'emplois")
					a.link.col-sm-3.col-xs-6(href="/legals")
						=s("Mentions légales")
					copytag.col-sm-3.col-xs-6(data="right")
						!=s("{c} 2014 Wornet", { c: "&#169;" })
			if datas
				each value, name in datas
					+data(name, value)

		.loader.hidden

		block js
			each script in options.js().main
				if typeof(script) === 'object'
					if script[0] === 'non-ie'
						+non-ie()
							script(type="text/javascript" src=script[1])
					else
						+ie(script[0])
							script(type="text/javascript" src=script[1])
				else
					script(type="text/javascript" src=script)
